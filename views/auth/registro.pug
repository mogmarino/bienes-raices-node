extends ../layout/index

block contenido 

   .py-10
      h1.text-4xl.my-10.font-extrabold.text-center Bienes
         span.font-normal Raices
      h2.text-center.text-2xl.font-extrabold.text-orange-700= pagina

      if errores 
         div(class='max-w-md mx-auto my-10')
            each error  in errores  
               p(class='bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=error.msg

      .mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow.rounded-lg
            form.space-y-5(method="POST" action="/auth/registro" noValidate)
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='nombre') Tu nombre
                  input#nombre.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Nombre' type='text' name='nombre' value= usuario ? usuario.nombre : '')
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Tu Email
                  input#email.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Email' type='email' name='email' value= usuario ? usuario.email : '')
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Tu Password
                  input#password.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Password' type='password' name='password')
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repetir_password') Repetir Password
                  input#password.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Repite tu Password' type='password' name='repetir_password')
               div(class='flex items-center justify-between')
                  a(class="text-blue-500 text-xs" href="/auth/login") Ya tiene cuenta? Inicia Sesion
                  a(class="text-blue-500 text-xs" href="/auth/recuperar-pass") Recuperar Password
               input(class='w-full bg-indigo-500 hover:bg-indigo-700 p-4 text-white font-bold rounded-lg transition-colors cursor-pointer' type="submit" value='Crear Cuenta')



