extends ../layout/index

block contenido 

   .py-10
      h1.text-4xl.my-10.font-extrabold.text-center Bienes
         span.font-normal Raices
      h2.text-center.text-2xl.font-extrabold.text-orange-700= pagina

      if errores 
         div(class='max-w-md mx-auto my-10')
            each error  in errores  
               p(class='bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=error.msg


      .mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow.rounded-lg
            form.space-y-5(method="POST" action="/auth/login" noValidate)
               input(type="hidden", name="_csrf" value= csrfToken)
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email de registro
                  input#email.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Email' type='email' name='email')
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password
                  input#password.w-full.px-3.py-4.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Password' type='password' name='password')
               div(class='flex items-center justify-between')
                  a(class="text-blue-500 text-xs" href="/auth/recuperar-pass") Recuperar Password
                  a(class="text-blue-500 text-xs" href="/auth/registro") No tienes cuenta? Registrarse
               input(class='w-full bg-indigo-500 hover:bg-indigo-700 p-4 text-white font-bold rounded-lg transition-colors cursor-pointer' type="submit" value='Iniciar Sesion')



