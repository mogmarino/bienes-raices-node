extends ../layout/admin

block contenido 

    h2(class="text-2xl text-center uppercase font-extrabold mt-10") #{pagina}

    a(href="/mis-propiedades" class="rounded py-2 bg-indigo-500 hover:bg-indigo-700 text-sm px-10 text-white font-bold uppercase transition-all inline-block my-5 w-full sm:w-auto text-center") Propiedades

    //- pre= JSON.stringify(mensajes,undefined,2)

    div(class="mx-auto max-w-6xl bg-white shadow p-5 mt-10")

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-b border-gray-200 p-5")
                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-normal") #{mensaje.usuario.nombre}
                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal") #{mensaje.usuario.email}
                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal") #{mensaje.mensaje}
                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-normal") #{formatearFecha(mensaje.createdAt)}
        else 
            p(class="text-center text-gray-600 text-sm") No hay mensajes