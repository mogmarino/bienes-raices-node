extends ../layout/admin

block styles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name='csrf-token' content= csrfToken)


block contenido 

   .py-10
      h1.text-4xl.my-10.font-extrabold.text-center Bienes
        span.font-normal Raices
      h2.text-center.text-2xl.font-extrabold.text-orange-700= pagina

     
      div(class="bg-white shadow py-8 px-4 rounded mx-auto my-10 max-w-4xl md:px-10")
        form(id="imagen" class="dropzone space-y-8 border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" action=`/propiedades/agregar-imagen/${propiedad.id}` method="POST")
          input(type="hidden", name="_csrf" value= csrfToken)
            
        button(id="publicar" class="w-full mt-8 py-3 bg-indigo-500 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer transition-all" type="button") Publicar Propiedad

                    
block scripts
  script(src="/js/agregarImagen.js")

  
